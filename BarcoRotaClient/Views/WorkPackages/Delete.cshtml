@model WorkPackageViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="header">
    <div class="header__block">
        Delete @Model.Name
    </div>
    <div class="header__block--right">
        <a asp-action="Index" class="icon__frame">
            <i class="glyphicon glyphicon-arrow-left"></i>
        </a>
    </div>
</div>
<hr />

<h3>Are you sure you want to delete this and all associated jobs?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Manager.Name)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.JobsTotal)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.JobsTotal)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" />
    </form>
</div>
