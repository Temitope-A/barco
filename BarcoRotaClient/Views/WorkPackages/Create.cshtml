@model BarcoRota.Client.Models.WorkPackageCreationViewModel

@{
    ViewData["Title"] = "New Package";
}

<div class="header">
    <div class="header__block">
        New Work Package
    </div>
    <div class="header__block--right">
        <a asp-action="Index" class="icon__frame">
            <i class="glyphicon glyphicon-arrow-left"></i>
        </a>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstJob" class="control-label"></label>
                <input asp-for="FirstJob" class="form-control" type="date"/>
                <span asp-validation-for="FirstJob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastJob" class="control-label"></label>
                <input asp-for="LastJob" class="form-control" type="date"/>
                <span asp-validation-for="LastJob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobType" class="control-label"></label>
                <select asp-for="JobType" asp-items="Html.GetEnumSelectList<BarcoRota.Models.JobType>()" class="form-control"></select>
                <span asp-validation-for="JobType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCapacity" class="control-label"></label>
                <select asp-for="JobCapacity" class="form-control">
                    <option>1</option>
                    <option selected>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <span asp-validation-for="JobCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
